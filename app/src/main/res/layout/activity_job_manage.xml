<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JobManageActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:layout_marginTop="-5dp"
        android:src="@drawable/backgroundgood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/avatarImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/statusimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:src="@drawable/switchoff_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtPosition"
        app:layout_constraintTop_toTopOf="@+id/txtPosition" />

    <TextView
        android:id="@+id/txtPosition"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Kỹ sư lập trình phần mềm"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        android:gravity="center"
        android:drawableTint="@color/black"/>

    <ImageView
        android:id="@+id/addressic"
        style="@style/iconsize"
        android:src="@drawable/location"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/txtCity"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Ho Chi Minh"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/addressic"
        app:layout_constraintTop_toTopOf="@+id/addressic" />

    <ImageView
        android:id="@+id/imgNumOfrecut"
        style="@style/iconsize"
        android:layout_marginTop="0dp"
        android:src="@drawable/recruitment"
        app:layout_constraintStart_toEndOf="@+id/txtCity"
        app:layout_constraintTop_toTopOf="@+id/txtCity" />

    <TextView
        android:id="@+id/txtnumofrecut"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:text="10 People"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgNumOfrecut"
        app:layout_constraintTop_toTopOf="@+id/imgNumOfrecut" />

    <ImageView
        android:id="@+id/typejobic"
        style="@style/iconsize"
        android:layout_marginStart="0dp"
        android:src="@drawable/parttime"
        app:layout_constraintStart_toStartOf="@+id/addressic"
        app:layout_constraintTop_toBottomOf="@+id/addressic" />

    <TextView
        android:id="@+id/txtLevel"
        style="@style/fontJD"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="Full-time"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/typejobic"
        app:layout_constraintTop_toTopOf="@+id/typejobic" />

    <ImageView
        android:id="@+id/imgexp"
        style="@style/iconsize"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_experience"
        app:layout_constraintStart_toEndOf="@id/txtLevel"
        app:layout_constraintTop_toBottomOf="@+id/imgNumOfrecut"/>

    <TextView
        android:id="@+id/txtexp"
        style="@style/fontJD"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:text="2 year"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imgexp"
        app:layout_constraintTop_toTopOf="@+id/imgexp" />

    <TextView
        android:id="@+id/viewcadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="View candidates"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/viewcadi"
        android:layout_margin="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/findCadi"
            android:text="Find candidates"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="60dp"
            app:cornerRadius="25dp"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:elevation="20dp"
            android:src="@drawable/find"
            app:layout_constraintBottom_toBottomOf="@+id/findCadi"
            app:layout_constraintStart_toStartOf="@+id/findCadi"
            app:layout_constraintTop_toTopOf="@+id/findCadi" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:elevation="20dp"
            android:src="@drawable/candidate"
            app:layout_constraintBottom_toBottomOf="@+id/viewApply"
            app:layout_constraintStart_toStartOf="@+id/viewApply"
            app:layout_constraintTop_toBottomOf="@+id/findCadi" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewApply"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="View Apply"
            app:cornerRadius="25dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/findCadi"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_marginStart="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="20dp"
            android:src="@drawable/candidate_accetp"
            app:layout_constraintBottom_toBottomOf="@+id/Accep"
            app:layout_constraintStart_toStartOf="@+id/Accep"
            app:layout_constraintTop_toBottomOf="@+id/viewApply" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Accep"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Accept List"
            android:textSize="20dp"
            android:layout_marginHorizontal="10dp"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewApply"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>